PORT=3002

# PostgreSQL Database
DATABASE_URL=postgresql://username:password@host:5432/database?sslmode=require&connect_timeout=10&application_name=members-backend

# JWT Secret - Secure random string for authentication
JWT_SECRET=your_jwt_secret_here

# Twilio SMS Configuration
# Sign up at: https://www.twilio.com/
TWILIO_ACCOUNT_SID=your_account_sid_here
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890

# Alphanumeric Sender ID (medlemmer ser "DEBREIYESUS" i stedet for nummer)
# OBS: Alphanumeric sender ID krever betalt Twilio-konto, ikke trial account
# Kommentert ut inntil kontoen oppgraderes
# SMS_SENDER_ID=DEBREIYESUS

# CORS - Frontend URL
FRONTEND_URL=http://localhost:5178

# Node Environment
NODE_ENV=development
